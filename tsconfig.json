{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": [
            "esnext"
        ],
        "sourceMap": false,
        "moduleResolution": "Node",
        "strictNullChecks": true,
        "removeComments": false,
        "declaration": true,
        "esModuleInterop": false,
        "outDir": "./built/lib/",
        "declarationDir": "./built/t/",
        "declarationMap": false,
        "preserveWatchOutput": true,
        "alwaysStrict": true,
        "diagnostics": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "listFiles": true,
        "pretty": false,
        "noEmitOnError": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*",
        "test/**/*",
        "rollup.config.js",
        "commitlint.config.js",
        "jest.config.js"
    ]
}