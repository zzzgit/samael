{
    "compilerOptions": {
        "allowJs": true,
        // "emitDeclarationOnly": true,
        "target": "ESNext",
        "module": "commonjs",
        "lib": [
            "esnext"
        ],
        "sourceMap": true,
        "moduleResolution": "Node",
        "strictNullChecks": true,
        "removeComments": false,
        "declaration": true,
        "outDir": "./built/lib/",
        "declarationDir": "./built/t/",
        "declarationMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
}
